{
  "train_batch_size": 64,
  "train_micro_batch_size_per_gpu": 8,  
  "gradient_accumulation_steps": 8,   
  "world_size": 2,                     
  "fp16": {
    "enabled": true
  },
  
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "contiguous_gradients": true,
    "overlap_comm": false,
    "reduce_scatter": false
  },

  "model_parallel": {
    "enabled": true,
    "devices": ["cuda:0", "cuda:1"]
  },

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-3,
      "weight_decay": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
    
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 1000
    }
  },
  
  "steps_per_print": 100,
  
  "tensorboard": {
    "enabled": true,
    "output_path": "TensorBoard_log_dir", 
    "job_name": "deepspeed_training_UNet_Audio_Separation"
  },

  "wall_clock_breakdown": false
}
